<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.github.qing.simpleitemdecoration">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.LinearDividerActivity"
            android:label="LinearDividerItemDecoration" />
        <activity
            android:name=".activity.LinearSpaceActivity"
            android:label="LinearSpaceActivity" />

        <activity
            android:name=".activity.GridDividerActivity"
            android:label="GridDividerActivity" />
        <activity
            android:name=".activity.GridSpaceActivity"
            android:label="GridSpaceActivity" />

        <activity
            android:name=".activity.StaggeredSpaceActivity"
            android:label="StaggeredSpaceActivity" />
    </application>

</manifest>